
@using Abc.MvcWebUI.Models

@model IEnumerable<ProductModel>

<div class="container-fluid pb-5 mt-2">
    <div class="row">
        <div class="col-md-3">
          @Html.Action("GetCategories","Home")
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa-solid fa-circle-exclamation"></i>Bu kategoride bir ürün bulunamadı.
                </div>

            }
            else
            {
        <div class="alert alert-warning" role="alert">
            <i class="fa-solid fa-check"></i> <strong>@Model.Count()adet</strong>ürün bulundu.
        </div>
            }
            @Html.Partial("_ProductList", Model)
        </div>

        
    </div>
</div>