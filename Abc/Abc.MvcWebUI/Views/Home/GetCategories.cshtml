
@model IEnumerable <Abc.MvcWebUI.Entity.Category>

@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}
<div class="list-group">
    <a href="/Home/List" class="list-group-item"><i class="fa-solid fa-angles-right"></i>Tüm Kategoriler</a>
    @foreach (var item in Model)
    {
        if (selectedCategory != null)
        {
            if (item.Id == int.Parse(selectedCategory.ToString()))
            {
                //seçilen kategori ile rout id birbibrine eşit.
                <a href="/Home/List/@item.Id" class="list-group-item list-group-action active">
                    <i class="fa-solid fa-angles-right"></i>
                    @item.Name
                </a>
            }   
            else
            {
                <a href="/Home/List/@item.Id" class="list-group-item list-group-action ">
                    <i class="fa-solid fa-angles-right"></i>
                    @item.Name
                </a>

            }

        }
        else
        {

            <a href="/Home/List/@item.Id" class="list-group-item list-group-action">
                <i class="fa-solid fa-angles-right"></i>
                @item.Name
            </a>
        }


    }
</div>
