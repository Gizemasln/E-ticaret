
@using Abc.MvcWebUI.Models
@model IEnumerable<ProductModel>


<link rel="stylesheet" href="~/theme/css/style.css">


<div class="row">


    @foreach (var urun in Model)
    {<div class="col-md-2 mb-3">
            <div style="width:200px; height:400px;" class="card">
                <img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id">
                            @urun.Name
                        </a>
                    </h4>
                    <p class="card-text pt-2 description">@urun.Description</p>
                </div>
                    <div class="card-footer"><small class="text-muted product-price">
                 <i class="fa-solid fa-turkish-lira-sign"></i>
                        @urun.Price</small>
      <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right"><i class="fa-solid fa-arrow-right"></i>Ürünü İncele</a>
                </div>
            </div>

        </div>
       
    }



</div>

